<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">#bcbcbc</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="radiogroup">
        <item name="android:drawablePadding">@dimen/x1</item>
        <item name="android:textSize">@dimen/x10</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!--这个是登录时候的dialog（为了等待，因为登录可能耗时）-->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Mydialog" parent="android:style/Theme.Dialog">
        <!-- 注意这里也有个天坑啊，背景不是background而是windowBackgroud -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>



</resources>
