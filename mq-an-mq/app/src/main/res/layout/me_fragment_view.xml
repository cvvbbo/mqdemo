<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:circleimageView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    >

    <RelativeLayout
        android:id="@+id/hand_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x124"
        android:background="@drawable/me_bg" >

    <com.emiaoqian.app.mq.view.CircleImageView
        android:id="@+id/headIcon"
        android:layout_width="@dimen/x54"
        android:layout_height="@dimen/x54"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/x37"
        android:src="@drawable/icon_logo"
        circleimageView:border_color="#ffffff"
         />

        <!--已登录的状态-->
    <TextView
        android:visibility="gone"
        android:id="@+id/username"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:layout_marginTop="@dimen/x5"
        android:textSize="14sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/headIcon"
        android:text="暂无"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x17" />

        <TextView
            android:id="@+id/login_tv"
            android:paddingBottom="@dimen/x2"
            android:paddingTop="@dimen/x2"
            android:paddingRight="@dimen/x10"
            android:paddingLeft="@dimen/x10"
            android:background="@drawable/shape_button_transparent"
            android:textColor="@android:color/white"
            android:layout_marginTop="@dimen/x5"
            android:layout_centerHorizontal="true"
            android:text="登录"
            android:layout_below="@+id/headIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    <ImageView
        android:id="@+id/setting_im"
        android:layout_marginTop="@dimen/y17"
        android:layout_marginRight="@dimen/y12"
        android:layout_alignParentRight="true"
        android:src="@drawable/setting_im"
        android:layout_width="@dimen/x20"
        android:layout_height="@dimen/x20"/>


        </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/top_ry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hand_rl"
        android:layout_marginBottom="@dimen/x10"
        />

    <View
        android:id="@+id/v1"
        android:layout_marginRight="@dimen/x17"
        android:layout_marginLeft="@dimen/x17"
        android:layout_below="@+id/top_ry"
        android:background="#f5f5f5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"/>

    <android.support.v7.widget.RecyclerView
        android:layout_marginBottom="@dimen/x10"
        android:id="@+id/buttom_ry1"
        android:layout_below="@+id/top_ry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_marginRight="@dimen/x17"
        android:layout_marginLeft="@dimen/x17"
        android:layout_below="@+id/buttom_ry1"
        android:background="#f5f5f5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"/>

    <android.support.v7.widget.RecyclerView
        android:layout_marginBottom="@dimen/x10"
        android:id="@+id/buttom_ry2"
        android:layout_below="@+id/buttom_ry1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_marginRight="@dimen/x17"
        android:layout_marginLeft="@dimen/x17"
        android:layout_below="@+id/buttom_ry2"
        android:background="#f5f5f5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/buttom_ry3"
        android:layout_below="@+id/buttom_ry2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>







</RelativeLayout>