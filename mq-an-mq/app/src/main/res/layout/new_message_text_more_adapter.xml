<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:circleimageView="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/head_icon"
        android:layout_marginTop="@dimen/x19"
        android:layout_marginBottom="@dimen/x19"
        android:layout_marginLeft="@dimen/x13"
        android:src="@drawable/icon_logo"
        android:layout_width="@dimen/y36"
        android:layout_height="@dimen/y36" />

    <TextView
        android:id="@+id/title1"
        android:textColor="@color/text_color"
        android:layout_marginLeft="@dimen/x9"
        android:textSize="15sp"
        android:layout_marginTop="@dimen/x18"
        android:layout_toRightOf="@+id/head_icon"
        android:text="对方已签收"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <TextView
        android:id="@+id/time_tv"
        android:layout_marginRight="@dimen/x17"
        android:layout_marginTop="@dimen/x18"
        android:text="2018-04-03"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x14" />

    <TextView
        android:id="@+id/text_des"
        android:layout_marginTop="@dimen/x3"
        android:layout_marginRight="@dimen/x17"
        android:ellipsize="end"
        android:maxLines="3"
        android:maxEms="20"
        android:layout_marginLeft="@dimen/x9"
        android:layout_below="@+id/title1"
        android:layout_toRightOf="@+id/head_icon"
        android:text="您有一封新的电子合同请注意查收"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

