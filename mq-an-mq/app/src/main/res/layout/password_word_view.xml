<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    android:isScrollContainer="false"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <RelativeLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y30"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/returnIm_rl"
                android:layout_width="@dimen/y40"
                android:layout_height="@dimen/y30">


                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x10"
                    android:layout_marginLeft="@dimen/x17"
                    android:id="@+id/returnIm"
                    android:layout_width="@dimen/x9"
                    android:layout_height="@dimen/x19"
                    android:src="@drawable/return_im" />


            </RelativeLayout>


            <TextView
                android:textColor="@android:color/black"
                android:layout_centerInParent="true"
                android:id="@+id/searchview"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x20"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="登录"
                android:textSize="16sp" />

        </RelativeLayout>

        <View
            android:layout_below="@+id/title"
            android:background="@color/calendar_bar_color"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>


        <ImageView
            android:layout_marginTop="@dimen/x60"
            android:layout_centerHorizontal="true"
            android:src="@drawable/mqlog"
            android:layout_width="@dimen/x51"
            android:layout_height="@dimen/x51" />


        <ImageView
            android:layout_marginTop="@dimen/x155"
            android:layout_marginLeft="@dimen/x32"
            android:id="@+id/im1"
            android:src="@drawable/loginphoneim"
            android:layout_width="@dimen/x14"
            android:layout_height="@dimen/x19" />

        <EditText
            android:layout_marginLeft="@dimen/x17"
            android:layout_toRightOf="@+id/im1"
            android:textSize="16sp"
            android:hint="请输入手机号"
            android:layout_marginTop="@dimen/x150"
            android:id="@+id/phone_num"
            android:background="@null"
            android:layout_width="180dp"
            android:layout_height="@dimen/x30" />


        <TextView
            android:textColor="@color/button_color"
            android:background="@drawable/shape_send_code"
            android:layout_marginTop="@dimen/x153"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x34"
            android:id="@+id/send_code"
            android:layout_width="@dimen/x69"
            android:layout_height="@dimen/y16"
            android:gravity="center"
            android:text="获取验证码"
            android:textSize="14sp"
            />

        <View
            android:id="@+id/v1"
            android:layout_marginRight="@dimen/x32"
            android:layout_marginLeft="@dimen/x32"
            android:layout_marginTop="@dimen/y9"
            android:layout_below="@+id/im1"
            android:background="@color/line_color1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"/>


        <ImageView
            android:layout_marginTop="@dimen/y9"
            android:layout_below="@+id/v1"
            android:layout_marginLeft="@dimen/x32"
            android:id="@+id/im2"
            android:src="@drawable/loginpassim"
            android:layout_width="@dimen/x14"
            android:layout_height="@dimen/x19" />

        <EditText
            android:layout_marginTop="@dimen/y5"
            android:layout_below="@+id/v1"
            android:layout_marginLeft="@dimen/x17"
            android:layout_toRightOf="@+id/im1"
            android:textSize="16sp"
            android:hint="请输入验证码"
            android:id="@+id/password_num"
            android:background="@null"
            android:layout_width="180dp"
            android:layout_height="@dimen/x30" />

        <View
            android:id="@+id/v2"
            android:layout_marginRight="@dimen/x32"
            android:layout_marginLeft="@dimen/x32"
            android:layout_marginTop="@dimen/y9"
            android:layout_below="@+id/im2"
            android:background="@color/line_color1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"/>


        <TextView
            android:visibility="gone"
            android:id="@+id/tv"
            android:textSize="12sp"
            android:text="收不到验证码？点击获取"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_note"
            android:layout_alignBottom="@+id/tv_note"
            android:layout_alignLeft="@+id/v2"/>

        <TextView
            android:visibility="gone"
            android:textColor="@color/button_color"
            android:layout_toRightOf="@+id/tv"
            android:id="@+id/tv_note"
            android:layout_marginTop="@dimen/x8"
            android:textSize="12sp"
            android:layout_below="@+id/v2"
            android:text="语音验证码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@+id/v2"
            android:id="@+id/next_tv"
            android:layout_marginTop="@dimen/x73"
            android:textColor="@android:color/white"
            android:background="@drawable/shape_buttom"
            android:gravity="center"
            android:text="登录"
            android:layout_marginRight="@dimen/x32"
            android:layout_marginLeft="@dimen/x32"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y25"
            />


        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/change_login_state"
            android:layout_marginLeft="@dimen/x112"
            android:layout_marginBottom="@dimen/x60"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/im3"
                android:src="@drawable/loginpassim_p"
                android:layout_width="@dimen/x19"
                android:layout_height="@dimen/x20"/>


            <TextView
                android:layout_gravity="bottom"
                android:id="@+id/change_login_state_tv"
                android:layout_marginLeft="@dimen/x9"
                android:layout_toRightOf="@+id/im3"
                android:textSize="16sp"
                android:textColor="@color/button_color"
                android:text="密码登录"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>




        <TextView
            android:layout_marginBottom="20dp"
            android:id="@+id/agree_note1"
            android:text="认可使用秒签速递电子合同网作为签订协议（包括但不限于）的方式"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/next_tv"
            android:layout_alignStart="@+id/next_tv" />


        <TextView
            android:layout_above="@+id/agree_note1"
            android:id="@+id/agree_note"
            android:layout_marginLeft="@dimen/x70"
            android:text="已阅读并同意 《秒签速递电子合同网服务协议》 "
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>