<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/popupwindow">

    <FrameLayout
        android:id="@+id/root_popupwindow"
        android:layout_width="150dp"
        android:layout_height="200dp"
        >

        <ListView
            android:id="@+id/root_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/popwindows_left"
            android:cacheColorHint="#00000000"
            android:listSelector="@color/popselectcolor"
            >
        </ListView>
    </FrameLayout>

    <FrameLayout
        android:layout_toRightOf="@id/root_popupwindow"
        android:id="@+id/sub_popupwindow"
        android:layout_width="233dp"
        android:layout_height="200dp"
        android:background="#00000000"
        >

        <ListView
            android:id="@+id/sub_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            >
        </ListView>
    </FrameLayout>



</RelativeLayout>